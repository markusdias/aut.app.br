{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  },
  "rules": {
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./app/(pages)/*",
            "from": "./app/api"
          },
          {
            "target": "./components/*",
            "from": "./app/(pages)"
          }
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": "error",
    "import/no-relative-parent-imports": "off"
  }
}
